#include <stdio.h>
#include <termios.h>
#include <unistd.h>
#include <stdlib.h>

void change()
{
	int j = 0;
   if (flag == 2 || flag == 3)
   {
      if (now == 1)
         _where--;
   }
   //system("cls");
   display();
   for (j = 0; j <= _where; j++)
      printf("%s", unicode_to_utf8(in[j]));
   if (flag == 1)
      flag = 2;
   else if (flag == 2)
      flag = 3;
   else if (flag == 3)
      flag = 1;
   //system("cls");
   display();
   for (j = 0; j <= _where; j++)
      printf("%s", unicode_to_utf8(in[j]));
   whenChange = 1;
   consCheck = 0;
   vowelCheck = 0;
   save = -100;
   k_flag = 0;
   now = 0;
   return;
}

int main()
{
	change();
	change();	
	return 0;
}
